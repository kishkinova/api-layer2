{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://zowe.org/schema/catalog-config",
    "allOf": [
        { "$ref": "https://zowe.org/schemas/v2/server-base" },
        {
            "type": "object",
            "properties": {
                "components": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                        "api-catalog": {
                            "allOf": [
                                {"$ref":  "https://zowe.org/schemas/v2/server-base#zoweComponent"},
                                {
                                    "type": "object",
                                    "properties": {
                                        "port": {
                                            "$ref": "#/$defs/port",
                                            "default": 7554
                                        },
                                        "apiml": {
                                            "type": "object",
                                            "description": "Zowe API ML specific properties",
                                            "properties": {
                                                "catalog": {
                                                    "type": "object",
                                                    "description": "API Catalog customization",
                                                    "properties": {
                                                        "customStyle": {
                                                            "type": "object",
                                                            "description": "",
                                                            "properties": {
                                                                "logo": {
                                                                    "type": "string",
                                                                    "description": "Location of API Catalog logo"
                                                                },
                                                                "titlesColor": {
                                                                    "type": "string",
                                                                    "description": ""
                                                                },
                                                                "fontFamily": {
                                                                    "type": "string",
                                                                    "description": ""
                                                                },
                                                                "hoverColor": {
                                                                    "type": "string",
                                                                    "description": ""
                                                                },
                                                                "focusColor": {
                                                                    "type": "string",
                                                                    "description": ""
                                                                },
                                                                "hyperlinksColor": {
                                                                    "type": "string",
                                                                    "description": ""
                                                                },
                                                                "boxShadowColor": {
                                                                    "type": "string",
                                                                    "description": ""
                                                                },
                                                                "headerColor": {
                                                                    "type": "string",
                                                                    "description": ""
                                                                },
                                                                "backgroundColor": {
                                                                    "type": "string",
                                                                    "description": ""
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "debug": {
                                            "type": "boolean",
                                            "description": "Enable debug logs in metrics service"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    ],
    "$defs": {
        "port": {
            "type": "integer",
            "description": "TCP network port",
            "minimum": 1024,
            "maximum": 65535
        }
    }
}
