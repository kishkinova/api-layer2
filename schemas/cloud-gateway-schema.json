{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://zowe.org/schema/cloud-gateway-config",
    "allOf": [
        { "$ref": "https://zowe.org/schemas/v2/server-base" },
        {
            "type": "object",
            "properties": {
                "components": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                        "cloud-gateway-service": {
                            "allOf": [
                                {"$ref":  "https://zowe.org/schemas/v2/server-base#zoweComponent"},
                                {
                                    "type": "object",
                                    "properties": {
                                        "apiml": {
                                            "type": "object",
                                            "description": "Zowe API ML specific properties.",
                                            "properties": {
                                                "service": {
                                                    "type": "object",
                                                    "properties": {
                                                        "forwardClientCertEnabled": {
                                                            "type": "boolean",
                                                            "description": "Enables forwarding client certificate from request to next gateway in a special request header.",
                                                            "default": false
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "security" :{
                                            "type": "object",
                                            "description": "Security settings",
                                            "properties": {
                                                "oauth2": {
                                                    "type": "object",
                                                    "description": "Enable OAuth2 login flow",
                                                    "properties": {
                                                        "client": {
                                                            "type": "object",
                                                            "description": "OAuth2 client settings",
                                                            "properties": {
                                                                "registration": {
                                                                    "type": "object",
                                                                    "description": "OAuth2 client registration settings",
                                                                    "patternProperties": {
                                                                        "$*.^": {
                                                                            "type": "object",
                                                                            "description": "OAuth2 provider-specific settings",
                                                                            "properties": {
                                                                                "issuer": {
                                                                                    "type": "string",
                                                                                    "description": ""
                                                                                },
                                                                                "clientId": {
                                                                                    "type": "string",
                                                                                    "description": ""
                                                                                },
                                                                                "clientSecret": {
                                                                                    "type": "string",
                                                                                    "description": ""
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                },
                                                                "provider": {
                                                                    "type": "object",
                                                                    "description": "OAuth2 client authentication provider settings",
                                                                    "patternProperties": {
                                                                        "$*.^": {
                                                                            "type": "object",
                                                                            "description": "OAuth2 provider-specific settings",
                                                                            "properties": {
                                                                                "authorizationUrl": {
                                                                                    "type": "string",
                                                                                    "description": ""
                                                                                },
                                                                                "tokenUri": {
                                                                                    "type": "string",
                                                                                    "description": ""
                                                                                },
                                                                                "userInfoUri": {
                                                                                    "type": "string",
                                                                                    "description": ""
                                                                                },
                                                                                "userNameAttribute": {
                                                                                    "type": "string",
                                                                                    "description": ""
                                                                                },
                                                                                "jwkSetUri": {
                                                                                    "type": "string",
                                                                                    "description": ""
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "port": {
                                            "$ref": "#/$defs/port",
                                            "default": 7563
                                        },
                                        "debug": {
                                            "type": "boolean",
                                            "description": "Enable debug logs in discovery service"
                                        },
                                        "heap": {
                                            "type": "object",
                                            "description": "Configure JVM parameters for heap size",
                                            "properties": {
                                                "init": {
                                                    "type": "integer",
                                                    "description": "Initial heap size in MB."
                                                },
                                                "max": {
                                                    "type": "integer",
                                                    "description": "Maximum heap size in MB."
                                                }
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    ],
    "$defs": {
        "port": {
            "type": "integer",
            "description": "TCP network port",
            "minimum": 1024,
            "maximum": 65535
        }
    }
}
