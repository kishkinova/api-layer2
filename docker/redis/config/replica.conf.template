port 6380
replicaof {REDIS_MASTER_HOST} 6379
masterauth "heslo"
requirepass "heslo"

{TLS_SETTING}tls-cert-file /keystore/docker/all-services.keystore_signed.cer
{TLS_SETTING}tls-key-file-pass password
{TLS_SETTING}tls-key-file /keystore/docker/all-services.keystore.key
{TLS_SETTING}tls-ca-cert-file /keystore/docker/localca.cer
{TLS_SETTING}tls-auth-clients no
{TLS_SETTING}tls-replication yes
# overwrites any port directive above
{TLS_SETTING}port 0
{TLS_SETTING}tls-port {TLS_PORT}
