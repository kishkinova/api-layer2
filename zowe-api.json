{
    "name": "API Mediation Layer",
    "defaultDirName": "api-mediation-layer",
    "defaultHlqSegment": "ZADSMP",
    "zfsMegabytes": 500,

    "deployment": {
        "files": {
            "discovery-service/build/libs/discovery-service-thin.jar": {
                "target": "bin/discovery-service.jar",
                "binary": true
            },
            "gateway-service/build/libs/gateway-service-thin.jar": {
                "target": "bin/gateway-service.jar",
                "binary": true
            },
            "api-catalog-services/build/libs/api-catalog-services-thin.jar": {
                "target": "bin/api-catalog-services.jar",
                "binary": true
            },
            "build/libraries.zip": {
                "target": "bin/lib/libraries.zip",
                "binary": true
            }
        }
    },

    "shellStartCommand": "echo 'Not supported until variable replacement is implemented by Zowe SDK team'",
    "jobTemplatePath": "config/zowe-api-dev/template-bpxbatch.jcl",
    "jobPath": "build/api.jcl",

    "configurations": {
        "zos": {
            "files": {
                "config/zowe-api-dev/run-wrapper.sh": {
                    "target": "bin/run-wrapper.sh",
                    "binary": false
                },
                "zowe-install/src/main/resources/component-scripts/start.sh": {
                    "target": "bin/start.sh",
                    "binary": false
                },
                "keystore/localhost/localhost.keystore.p12": {
                    "target": "keystore/keystore.p12",
                    "binary": true
                },
                "keystore/localhost/localhost.truststore.p12": {
                    "target": "keystore/truststore.p12",
                    "binary": true
                }
            }
        }
    }

}
