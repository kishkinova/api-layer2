{
    "compilerOptions": {
      "types": [
        "node",
        "jest"
      ],
      "target": "es2021",
      "module": "commonjs",
      "declaration": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./lib",
      "preserveConstEnums": true,
      "removeComments": false,
      "pretty": true,
      "sourceMap": true,
      "newLine": "lf"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "lib",
      "node_modules",
      "**/__tests__/*",
      "**/*.test.ts"
    ]
  }
